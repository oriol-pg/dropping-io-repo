{
  "name": "dropping-io",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
     "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "db:push": "turbo run db:push",
    "build:front": "pnpm --filter @workspace/front build",
    "build:api": "pnpm --filter @workspace/api build",
    "deploy:stage:front": "pnpm --filter @workspace/front deploy:stage",
    "deploy:stage:api": "pnpm --filter @workspace/api deploy:stage",
    "deploy:production:front": "pnpm --filter @workspace/front deploy:production",
    "deploy:production:api": "pnpm --filter @workspace/api deploy:production"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
