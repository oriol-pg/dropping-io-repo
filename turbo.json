{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["lint", "check-types", "build", "^deploy"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DB_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    },
    "db:generate": {
      "env": ["DB_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    },
    "db:migrate": {
      "env": ["DB_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    },
    "db:studio": {
      "env": ["DB_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    },
    "db:push": {
      "env": ["DB_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    }
  }
}
